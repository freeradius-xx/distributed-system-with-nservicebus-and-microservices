@using Shared.ViewModels
@model IEnumerable<Shipping.Entities.ShippingOrderData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 50px;">
    <fieldset>
        <legend>SHIPPING</legend>

        @if (Model == null)
        {
            <div>No Orders yet...</div>
        }
        else
        {
            <table style="width: 100%;" cellpadding="5">
                <tr>
                    <th>Order</th>
                    <th>Cust</th>
                    <th>Prod</th>
                    <th>State</th>
                    <th></th>
                </tr>
                @foreach (var o in Model)
                {
                    if (o.OrderState != OrderState.AcceptedBySales)
                    {
                        continue;
                    }

                    <tr>
                        <td style="width: 250px; white-space: nowrap;">
                            @o.OrderId
                        </td>
                        <td style="white-space: nowrap;">
                            @o.CustomerId
                        </td>
                        <td style="white-space: nowrap;">
                            @o.ProductId
                        </td>
                        <td style="width: 100px;">
                            @o.OrderState.ToString()
                        </td>
                        <td>
                            @Html.ActionLink("Shipp the order", "OrderShipped", new { orderId = o.OrderId }, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }
            </table>
        }
    </fieldset>
</div>

@section scripts {
    <script>
        $(function () {

            $.connection.hub.logging = true;

            $.connection.hub.url = "http://localhost:2222/signalr";
            var hub = $.connection.shippingHub;

            hub.client.incomingOrder = function (order) {
                toastr.info('<b>New order:</b><br/>' + order + '!');
                setTimeout(function () {
                    window.location.reload(true);
                }, 3100);
            };

            hub.client.test = function (message) {
                console.log(message);
                toastr.info('Test');
            };

            $.connection.hub.start().done(function () {
                console.log('hub started...');
            });

        });
    </script>
}